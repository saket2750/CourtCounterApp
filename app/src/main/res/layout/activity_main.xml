<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/teamALayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/teamAText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#616161"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:textSize="56sp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/teamAScore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="teamA3"
                android:text="+3 POINTS"/>
            <Button
                android:id="@+id/teamAScore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:onClick="teamA2"
                android:text="+2 POINTS"/>
            <Button
                android:id="@+id/teamAScore1"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:onClick="teamA1"
                android:text="FREE THROW"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:id="@+id/teamBLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center">
            <TextView
                android:id="@+id/teamBText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Team B"
                android:textStyle="bold"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/teamBScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/teamBScore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:onClick="teamB3"
                android:text="+3 POINTS"/>
            <Button
                android:id="@+id/teamBScore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:onClick="teamB2"
                android:text="+2 POINTS"/>
            <Button
                android:id="@+id/teamBScore1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:onClick="teamB1"
                android:text="FREE THROW"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginBottom="8dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_marginVertical="16dp"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="36dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:onClick="resetScore"
        android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>